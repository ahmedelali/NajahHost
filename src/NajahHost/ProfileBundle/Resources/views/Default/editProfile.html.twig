{% extends '::base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h4 class="page-header" >Modification du profile <b class="myColor" >{{ user.username }}</b> </h4>
            </div>

            <div class="col-md-8">
                <div class="panel">
                    <div class="panel-body">
                        {{ form_start(form, {"attr" : { 'autocomplete':"off"}}) }}
                        <h4> A propos </h4>
                        <div class="form-group">
                            {{ form_widget(form.about, {'attr': {'class': 'form-control', 'autofocus' : 'autofocus'                             , 'rows':'7'}}) }}
                        </div>
                        <h4> Profession </h4>
                        <div class="form-group">
                            {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <button type="submit" class='btn btn-lg btn-success' >Modifier</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}