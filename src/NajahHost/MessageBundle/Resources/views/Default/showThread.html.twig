{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="panel">
                    <div class="panel-body">
                        <h5>{{ thread.subject }}</h5>

                        <div class="help-block">{{ thread.createdAt|date("m/d/Y H:i:s") }}</div>
                        {% for message in thread.messages %}
                            <div class="row">
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="pull-left"><b>{{ message.sender.username }}</b></div>
                                    <div class="pull-right"><b>{{ message.createdAt|date("m/d/Y H:i:s") }}</b></div>
                                    <div class="clearfix"></div>
                                    <p>
                                        {{ message.body }}
                                    </p>
                                    <hr/>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="help-block">Répondre a ce message</div>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_widget(form.body, {'attr' : {'class' : 'form-control','placeholder' : 'Contenu de message','rows' : '7'}}) }}
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-success" type="submit" value="Répondre"/>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
