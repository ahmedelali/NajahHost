{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="panel">
                    <div class="panel-body">
                        <h4 class="page-header">Envoyer un  Message Ã  : <span class="myColor">{{ username }}</span></h4>
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label for="">Sujet :</label>
                            {{ form_widget(form.subject, {'attr':{'class':'form-control','placeholder':'Sujet de message'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="">Body</label>
                            {{ form_widget(form.body, {'attr':{'class':'form-control','placeholder':'Contenu de message'}}) }}
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success" type="submit"/>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
